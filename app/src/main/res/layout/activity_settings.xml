<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:orientation="vertical"
    android:background="?attr/backgroundColor"
    tools:context=".Settings">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >



    <TextView
        android:textStyle="bold"
        android:textColor="?attr/textcolor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/language"
        />


    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="?attr/cardBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        android:layout_marginTop="8dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            >

            <RadioGroup
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/language_eng"
                    android:text="@string/english"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/textcolor"
                    />

                <RadioButton
                    android:id="@+id/language_amh"
                    android:text="@string/amharic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/textcolor"
                    />

                <RadioButton
                    android:id="@+id/language_oro"
                    android:text="@string/affan_oromo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/textcolor"
                    />

                <RadioButton
                    android:id="@+id/language_tig"
                    android:text="@string/tigrigna"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/textcolor"
                    />


                <RadioButton
                    android:id="@+id/language_gez"
                    android:text="@string/geez"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/textcolor"
                    />




            </RadioGroup>

            <LinearLayout
                android:orientation="vertical"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="8dp">



                <TextView
                    android:textColor="@android:color/white"
                    android:layout_marginTop="68dp"

                    android:textSize="18sp"
                    android:layout_width="56dp"
                    android:textAlignment="center"
                    android:background="@drawable/text_round"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textColor="@android:color/white"
                    android:layout_marginTop="10dp"

                    android:textSize="18sp"
                    android:background="@drawable/text_round"
                    android:layout_width="56dp"
                    android:textAlignment="center"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textColor="@android:color/white"
                    android:layout_marginTop="10dp"

                    android:textSize="18sp"
                    android:background="@drawable/text_round"
                    android:layout_width="56dp"
                    android:textAlignment="center"
                    android:layout_height="wrap_content" />


            </LinearLayout>

        </RelativeLayout>




    </androidx.cardview.widget.CardView>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="?attr/textcolor"
        android:text="@string/theme"
        android:layout_marginTop="8dp"
        />


    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="?attr/cardBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        >

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            >

            <RadioButton
                android:checked="true"
                android:id="@+id/mySwitch"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/night_mode"
                android:textColor="?attr/textcolor"
                />

            <RadioButton
                android:id="@+id/light"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/light_mode"
                android:textColor="?attr/textcolor"
                />



                <RadioButton
                    android:id="@+id/royal"
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textColor="?attr/textcolor"
                    />

                <RadioButton
                    android:id="@+id/dark"
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/textcolor"
                    />



        </RadioGroup>


    </androidx.cardview.widget.CardView>



    </LinearLayout>

    </ScrollView>

</LinearLayout>