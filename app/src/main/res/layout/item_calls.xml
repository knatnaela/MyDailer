<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:clickable="true"
    android:id="@+id/call_item_id"
    android:background="?attr/backgroundColor"
    android:focusable="true">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="0dp"
        app:cardBackgroundColor="?attr/cardBackground"
        android:layout_margin="2dp"
        >

    <ImageView
        android:src="@drawable/internetimg"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:id="@+id/img_calls"
        android:layout_marginStart="8dp"
        android:layout_gravity="start|center"
        android:layout_marginLeft="8dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="76sp"
        android:layout_marginStart="76sp"
        >

        <TextView
            android:textColor="?attr/textcolor"
            android:id="@+id/contact_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Contact Name"
            />

        <TextView
            android:textColor="?attr/textcolor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone number"
            android:id="@+id/phone_number"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            >
                <ImageView
                    android:id="@+id/btn_received"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_call_received_black_24dp"
                    android:layout_gravity="bottom|end"
                    android:layout_marginLeft="@dimen/_8sdp"
                    />


            <ImageView
                android:id="@+id/btn_received2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp" />

            <TextView
                android:textColor="?attr/textcolor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date"
                android:textStyle="italic"
                android:id="@+id/Date"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:id="@+id/fav"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="1dp"
                app:srcCompat="@drawable/ic_star_golden_24dp"
                android:visibility="invisible"
                android:layout_marginStart="8dp" />




        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="end|center"

        >

        <ImageView
            android:id="@+id/btn_call"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_phone_24dp"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp" />

    </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>