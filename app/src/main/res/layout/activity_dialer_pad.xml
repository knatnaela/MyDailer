<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="?attr/cardBackground"
    >

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_above="@+id/dailer_layout"
            android:layout_gravity="top"
            android:gravity="top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/cardBackground"

            >

            <LinearLayout
                android:id="@+id/create_contact_layout"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:padding="@dimen/_10sdp"

                >

                <ImageView
                    android:id="@+id/img_contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginStart="@dimen/_8sdp"
                    app:srcCompat="@drawable/ic_person_add_black_24dp"
                    android:layout_marginLeft="@dimen/_8sdp"
                    tools:ignore="RtlHardcoded" />


                <TextView
                    android:id="@+id/txt_create_contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/create_new_contact"
                    android:textColor="?attr/textcolor"
                    android:layout_marginStart="@dimen/_18sdp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:textStyle="bold"
                    android:textSize="@dimen/_15sdp"
                    android:layout_marginLeft="@dimen/_18sdp"
                    />






            </LinearLayout>


            <LinearLayout
                android:id="@+id/add_contact_layout"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_48sdp"
                android:padding="@dimen/_10sdp"
                >

                <ImageView
                    android:id="@+id/img_add_contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginStart="@dimen/_8sdp"
                    app:srcCompat="@drawable/ic_person_white_24dp"
                    android:layout_marginLeft="@dimen/_8sdp" />


                <TextView
                    android:id="@+id/txt_add_contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/add_to_contact"
                    android:textColor="?attr/textcolor"
                    android:layout_marginStart="@dimen/_18sdp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:textSize="@dimen/_15sdp"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/_18sdp" />





            </LinearLayout>


            <LinearLayout
                android:id="@+id/send_sms_layout"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_85sdp"
                android:padding="@dimen/_10sdp"
                >

                <ImageView
                    android:id="@+id/img_sms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginStart="@dimen/_8sdp"
                    app:srcCompat="@drawable/ic_message_black_24dp"
                    android:layout_marginLeft="@dimen/_8sdp" />


                <TextView
                    android:id="@+id/text_sms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/send_sms"
                    android:layout_marginStart="@dimen/_18sdp"
                    android:textColor="?attr/textcolor"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:textSize="@dimen/_15sdp"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/_18sdp" />

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>



    <LinearLayout
        android:id="@+id/dailer_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:background="?attr/backgroundColor"
        android:elevation="@dimen/_10sdp"
        >




        <RelativeLayout
            android:id="@+id/firstLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/edtText"
                android:textColor="?attr/textcolor"
                android:textSize="@dimen/_15sdp"
                android:textColorHint="#588B"
                android:layout_width="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                app:met_baseColor="?attr/textcolor"
                app:met_floatingLabel="highlight"
                app:met_primaryColor="?attr/textcolor"
                android:gravity="center"
                android:textStyle="bold"
                android:inputType="number"
                />

            <ImageView
                android:id="@+id/btn_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_15sdp"
                android:layout_centerInParent="true"
                app:srcCompat="@drawable/ic_backspace_black_24dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/_15sdp" />


        </RelativeLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_25sdp"
            android:layout_marginStart="@dimen/_25sdp">


                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/button1"
                    android:layout_width="@dimen/_50sdp"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    tools:ignore="UseCompoundDrawables">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/_34sdp"
                        android:textStyle="normal"
                        android:textAlignment="center"
                        />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/ic_voicemail_black_24dp"
                        />


                </LinearLayout>


                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_45sdp"
                    android:id="@+id/button2"
                    android:layout_marginStart="@dimen/_45sdp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/_34sdp"
                        android:textStyle="normal"
                        android:textAlignment="center"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ABC"
                        android:textColor="#939393"
                        android:textStyle="normal"
                        tools:ignore="RtlHardcoded"
                        android:textSize="@dimen/_15sdp"
                        android:layout_centerInParent="true"
                        />



                </LinearLayout>


                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_marginLeft="@dimen/_45sdp"
                    android:layout_height="wrap_content"
                    android:id="@+id/button3"
                    android:layout_marginStart="@dimen/_45sdp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="3"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/_34sdp"
                        android:textStyle="normal"
                        android:textAlignment="center"
                        />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DEF"
                        android:textColor="#939393"
                        android:textStyle="normal"
                        tools:ignore="RtlHardcoded"
                        android:layout_centerInParent="true"
                        android:textSize="@dimen/_15sdp"
                        />

                </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_marginLeft="@dimen/_25sdp"
            android:layout_marginStart="@dimen/_25sdp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">



                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="wrap_content"
                    android:id="@+id/button4"
                   >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="4"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/_34sdp"
                        android:textStyle="normal"
                        android:textAlignment="center"
                        />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="GHI"
                        android:textColor="#939393"
                        android:textStyle="normal"
                        android:textSize="@dimen/_14sdp"
                        tools:ignore="ObsoleteLayoutParam,RtlHardcoded"
                        android:layout_centerInParent="true"
                        />




                </LinearLayout>





                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="@dimen/_50sdp"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/_45sdp"
                    android:layout_height="wrap_content"
                    android:id="@+id/button5"
                    android:layout_marginStart="@dimen/_45sdp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="5"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/_34sdp"
                        android:textStyle="normal"
                        android:textAlignment="center"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="JKL"
                        android:textColor="#939393"
                        android:textStyle="normal"
                        tools:ignore="RtlHardcoded"
                        android:layout_centerInParent="true"
                        android:textSize="@dimen/_15sdp"
                        />




                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="@dimen/_50sdp"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_45sdp"
                    android:layout_marginStart="@dimen/_45sdp"
                    android:id="@+id/button6"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="6"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/_34sdp"
                        android:textStyle="normal"
                        android:textAlignment="center"
                        />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MNO"
                        android:textColor="#939393"
                        android:textSize="@dimen/_15sdp"
                        android:textStyle="normal"
                        tools:ignore="RtlHardcoded"
                        />


                </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="@dimen/_25sdp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_25sdp">


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="@dimen/_50sdp"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:id="@+id/button7"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="7"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/_34sdp"
                        android:textStyle="normal"
                        android:textAlignment="center"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PQRS"
                        android:textColor="#939393"
                        android:textStyle="normal"
                        tools:ignore="RtlHardcoded"
                        android:textSize="@dimen/_15sdp"
                        android:layout_centerInParent="true"
                        />



                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="@dimen/_50sdp"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/_45sdp"
                    android:id="@+id/button8"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_45sdp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="8"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/_34sdp"
                        android:textStyle="normal"

                        android:textAlignment="center"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TUV"
                        android:textColor="#939393"
                        android:textStyle="normal"
                        tools:ignore="RtlHardcoded"
                        android:textSize="@dimen/_15sdp"
                        android:layout_centerInParent="true"
                        />




                </LinearLayout>


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="@dimen/_50sdp"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_45sdp"
                    android:id="@+id/button9"
                    android:layout_marginStart="@dimen/_45sdp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="9"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/_34sdp"
                        android:textStyle="normal"
                        android:textAlignment="center"
                        />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="WXYZ"
                        android:textSize="@dimen/_15sdp"
                        android:textColor="#939393"
                        android:textStyle="normal"
                        tools:ignore="RtlHardcoded"
                        android:layout_centerInParent="true"
                        />


                </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_25sdp"
            android:layout_marginStart="@dimen/_25sdp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/buttonStar"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="*"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/_24sdp"
                    android:textStyle="normal"

                    />


            </LinearLayout>


            <LinearLayout
                android:id="@+id/button0"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_44sdp"
                android:layout_marginStart="@dimen/_44sdp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textAlignment="center"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/_34sdp"
                    android:textStyle="normal" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="@dimen/_50sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_44sdp"
                android:layout_marginStart="@dimen/_44sdp"
                android:gravity="center"
                android:id="@+id/buttonHash"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="#"
                    android:textAlignment="center"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/_18sdp"
                    android:textStyle="normal" />


            </LinearLayout>


        </LinearLayout>


        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:backgroundTint="@color/btnDailer"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginBottom="@dimen/_12sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_12sdp"
            app:srcCompat="@drawable/ic_phone_black_24dp"
            android:layout_marginEnd="@dimen/_13sdp" />

    </LinearLayout>



</android.support.v7.widget.CardView>

